<div class="container-fluid centered">
  <div>
    <%= render 'layouts/form' %>
  </div>

  <div class="content-wrapper">
    <div class="reddit">
      <div class="col-xs-6 col-md-4">
        <h5 class="sec-heading"><span class="pennant"><span class="fa fa-reddit fa-6"></span></span></br></h5>
        <h3 class="sub-head"><%=link_to "#{@reddit_query}", "http://reddit.com/r/#{@reddit_query}", target: "_" %></h3>
        <div class="headline_list">
          <% @fetch_reddit.each do |url| %>
            <div class="row"><%= link_to "", "#", class: "fa fa-bomb"%>
              <%= link_to url[:content], url[:href], target: '_' %></div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="twitter">
      <div class="col-xs-6 col-md-4">
        <h5 class="sec-heading"><span class="pennant pennant-alt2"><span class="fa fa-twitter fa-6"></span></span></br></h5>
        <h3 class="sub-head"> <%= link_to "#{params[:q]}", "https://twitter.com/search?q=#{@tweet_query}&src=typd", target: "_"%></h3>
        <div class="headline_list">
          <% @tweets.each do |tweet| %>
            <% url = URI.extract(tweet).join(' ') %>
            <% if tweet.include?('http') && url.length > 15 %>
              <% link = url.match(/https?:\/\/[\S]+/) %>
              <div class="row"><%= link_to "", "#", class: "fa fa-bomb"%>
                <%= tweet.sub("#{link}", '') %>
              <%= link_to "#{link}",  "#{link}", target: "_" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="hn_news">
      <div class="col-xs-6 col-md-4">
        <h5 class="sec-heading"><span class="pennant pennant-alt"><span class="fa fa-hacker-news fa-6"></span></span></br></h5>
        <h3 class="sub-head">(in progress)</span></h3>
        <div class="headline_list">
          <% @fetch_hn.each do |url| %>
            <div class="row"><%= link_to "", "#", class: "fa fa-bomb"%>
            <%= link_to url[:content], url[:href], target: '_' %></div>
          <% end %>
        </div>
      </div>
    </div>

    
  </div>
</div>
